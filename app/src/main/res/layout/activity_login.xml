<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/login_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="营销控制"
        android:textColor="@color/base_color"
        android:textSize="40sp" />

    <LinearLayout
        android:id="@+id/login_account_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/mc_button_white_background"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号："
            android:textColor="@color/font_black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/login_account"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/login_password_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_account_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/mc_button_white_background"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码："
            android:textColor="@color/font_black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/login_password"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:paddingLeft="10dp"
            android:inputType="textPassword"
            android:paddingRight="10dp"
            android:textSize="14sp" />

    </LinearLayout>

    <CheckBox
        android:id="@+id/login_remember_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/login_password_layout"
        android:layout_below="@id/login_password_layout"
        android:layout_marginTop="10dp"
        android:text="记住密码" />

    <Button
        android:id="@+id/login"
        android:layout_below="@id/login_remember_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/mc_button_blue_background"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:text="登录"
        android:textColor="@color/white"
        android:layout_marginRight="30dp"/>

</RelativeLayout>
